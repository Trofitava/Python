//Выведите таблицу размером n×n n \times n n×n, заполненную числами от 1 1 1 до n2 n^2 n2 по спирали, выходящей из левого верхнего угла и закрученной по часовой стрелке

n=int(input())
a=[[0 for j in range(n)]for i in range(n)]

k=1

for m in range(n):
    a[0][m]=k        
    k+=1
i=0
j=n-1
while i!=n//2 and j!=(n-1)//2:    
    for x in range(int(n/2)):  
        for i in range(i+1, n-x):            
            a[i][j]=k           
            k+=1        
        for j in range(-j+1, -j+(n-2*x)):
            a[i][-j]=k         
            j=-j
            k+=1
        for i in range(-i+1, -i+(n-1-2*x)):
            a[-i][j]=k            
            i=-i
            k+=1
        for j in range(j+1, j+(n-1-2*x)):
            a[i][j]=k            
            k+=1              

for s in range(n):
    for t in range(n):
        print(a[s][t], end=' ')
    print()
           
